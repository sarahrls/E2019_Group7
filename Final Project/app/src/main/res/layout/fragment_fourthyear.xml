                            android:textSize="22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/TitleELEC4"
                            android:text=""
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/JoinELEC4"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:layout_below="@id/TitleELEC4"
                            android:layout_alignParentRight="true"
                            android:drawableLeft="@drawable/ic_group_add"
                            android:text="Join"
                            android:textAllCaps="false"
                            app:cornerRadius="10dp" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="60dp" >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="20dp"
                        android:paddingTop="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="10dp">

                        <TextView
                            android:id="@+id/ClassELEC5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_bg"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:text="ELEC5"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/TitleELEC5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ClassELEC5"
                            android:text="System Fundamentals"
                            android:textSize="22sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/TitleELEC5"
