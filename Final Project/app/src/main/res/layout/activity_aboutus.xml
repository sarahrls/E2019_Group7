<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUs"
    tools:layout_editor_absoluteX="-2dp"
    tools:layout_editor_absoluteY="-14dp">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="51dp"
            android:layout_height="match_parent"
            app:cardElevation="0dp"
            app:cardMaxElevation="0dp"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="-14dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:cardCornerRadius="100dp"
                app:cardElevation="0dp"
                tools:layout_editor_absoluteX="3dp"
                tools:layout_editor_absoluteY="-14dp">

                <ImageView
                    android:paddingTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_arrow_back"
                    tools:layout_editor_absoluteX="3dp"
                    tools:layout_editor_absoluteY="-14dp" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="358dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            app:cardElevation="0dp"
            tools:layout_editor_absoluteX="49dp"
            tools:layout_editor_absoluteY="-14dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:paddingTop="2dp"
                android:text="About Us"
                android:textSize="25sp"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="54dp"
                tools:layout_editor_absoluteY="-11dp" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <TextView
        android:id="@+id/textView22"
        android:layout_width="325dp"
        android:layout_height="154dp"
        android:layout_marginTop="36dp"
        android:text="Being technology incompetent, students find it challenging to access information and achieve a good quality learnings. Hence, our team came up to a plan where students could finally reach the intelligence they have been longing for Sharing idea is important in the student."
        android:textColor="@color/purple_200"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.383"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="324dp"
        android:layout_height="183dp"
        android:layout_marginTop="12dp"
        android:text="In KnowTech you can post, share, and learn some of information about the major subject in Bachelor of Science in Computer Science Taguig City University. This app is essential to the student, so they can use it as a tool academic needs."
        android:textColor="@color/purple_200"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.379"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

</androidx.constraintlayout.widget.ConstraintLayout>